<div class="col-sm-8 blog-main">
  <h2><%= @blog.title %></h2>
  <nav class="breadcrumb">
    <%= link_to "Home", root_path, class: 'breadcrumb-item' %>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>
    <span class="breadcrumb-item active"><%= @blog.title %></span> <span class="ml-auto">
      <%= link_to icon('fa','edit'), edit_blog_path(@blog) if logged_in?(:site_admin) %>
      &nbsp;&nbsp;
      <%= link_to icon('fa','trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } if logged_in?(:site_admin) %>
    </span>
  </nav>
  <p>
    <%= markdown @blog.body %>
  </p>
  <%= render 'comments/comment_form' %>
  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>
