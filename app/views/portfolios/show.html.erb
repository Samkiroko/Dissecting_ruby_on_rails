<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_items.title %></h1>
      <hr>
      <em><%= @portfolio_items.subtitle %></em>
      <p><%= @portfolio_items.body %></p>
      <hr>
      <h3>Technologies Used:</h3>
      <% @portfolio_items.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
